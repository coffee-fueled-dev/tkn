{
  "name": "tkn-server",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:baseline": "cd src/baseline && python3 -m pip install --user tokenizers datasets && python3 build_bpe_baseline.py --vocab-size 2048 --max-stories 50000 --output-dir tokenizers",
    "build:baseline:force": "rm -rf tokenizers && bun run build:baseline"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "pino-pretty": "^13.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@parcel/watcher": "^2.5.1",
    "debug": "^4.4.0",
    "lru-cache": "^11.0.2",
    "neo4j-driver": "^5.28.1",
    "pino": "^9.7.0",
    "prom-client": "^15.1.3"
  }
}
