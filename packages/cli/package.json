{
  "name": "tkn-cli",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "tkn-send": "./dist/tkn-send"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/tkn-send --target bun && chmod +x dist/tkn-send",
    "build:js": "bun build src/index.ts --outfile dist/index.js --target node",
    "dev": "bun --watch src/index.ts",
    "clean": "rm -rf dist",
    "help": "bun src/index.ts --help",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "bun src/index.ts"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "tkn-client": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
